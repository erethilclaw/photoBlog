{% extends 'admin/baseAdmin.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.8.3/Sortable.min.js" integrity="sha256-uNITVqEk9HNQeW6mAAm2PJwFX2gN45l8a4yocqsFI6I=" crossorigin="anonymous"></script>
    <script src="{{ asset('js/navbarPages.js') }}"></script>
{% endblock %}
{% block title %}{{ 'sidebar.pages'|trans }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>{{ 'sidebar.pages'|trans }}</h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                        <form action="{{ path('add_page') }}" method="POST" class="js-add-page" id="js-add-page">
                            <div class="form-group">
                                <label>{{ 'page_manager.slug'|trans }}</label>
                                <input type="text" class="form-control" name="page_slug">
                            </div>
                            <button class="btn btn-primary ">{{ 'page_manager.create_page'|trans }}</button>
                        </form>
                    </div> 
                    <div class="js-del-message" data-del-message="{{ 'page_manager.delete'|trans }}"></div>
                    <div class="col-md-6">
                        <label>{{ 'page_manager.list'|trans }}</label>
                        <ul class="list-group small js-page-list" data-url="{{ path('admin_navbar_pages') }}"></ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}