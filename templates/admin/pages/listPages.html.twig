{% extends 'admin/baseAdmin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css')}}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bower_components/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $("#pageList").DataTable({
            "order": [[0, "desc"]],
        });
    </script>
{% endblock %}
{% block title %}{{ 'sidebar.pages'|trans }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>{{ 'sidebar.pages'|trans }}</h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                        <form action="{{ path('add_page') }}" method="POST" class=" js-article">
                            <div class="form-group">
                                <label>{{ 'page_manager.slug'|trans }}</label>
                                <input type="text" class="form-control" name="page_slug">
                            </div>
                            <button type="submit" class="btn btn-primary">{{ 'page_manager.create_page'|trans }}</button>
                        </form>
                    </div> 
                    <div class="col-md-6">
                        <label>List</label>
                    </div>
                </div>
                <br/>  
                <table id="pageList" class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <th>{{ 'page_manager.title_es'|trans }}</th>
                        <th>{{ 'page_manager.title_en'|trans }}</th>
                        <th>{{ 'page_manager.title_ca'|trans }}</th>
                        <th>slug</th>
                        <th> {{ 'page_manager.position'|trans }}</th>
                        <th><i class="glyphicon glyphicon-wrench"></i></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for page in pages %}
                        <tr>
                            <td><a>
                                    {{page.titleEs }}</a>
                            </td>
                            <td><a>
                                    {{page.titleEn }}</a>
                            </td>
                            <td><a>
                                    {{page.titleCa }}</a>
                            </td>
                            <td><a>
                                    {{page.slug }}</a>
                            </td>
                            <td><a>
                                    {{ page.position }}</a>
                            </td>
                            <td>
                                <a href="{{ path('edit_page', {'id' : page.id}) }}"><span
                                                class="glyphicon glyphicon-pencil"></span></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="{{ path('del_page', {'id' : page.id}) }}" onclick="return confirm('{{ 'page_manager.delete'|trans }}')"><span
                                            class="glyphicon glyphicon-trash text-red"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}